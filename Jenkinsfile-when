pipeline {

    agent any
    
    parameters {
        choice(name: 'BRANCH', choices: ['main' , 'branch1', 'master'], description: 'Select a branch')
                }
    stages {

        stage('Build') {
            when {
                expression {
                    params.BRANCH == 'master'
                }
            }

            steps {
                echo "this is build"

            }
        }

        stage('Test') {
            when {
                expression {
                    params.BRANCH == 'master'
                }
            }
            steps {
                echo "this is test1"

            }
        }

        stage('Test2') {
             when {
                expression {
                    params.BRANCH == 'master'
                }
            }
            
            steps {
                echo "this is test2"

            }
        }
    }
}
